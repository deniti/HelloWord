<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="com.openlab.helloword.MainActivity">




    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:text="HOLA MUNDO"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_subtitule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="5.149"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.131"

        />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:inputType="textEmailAddress"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/button" />

    <Button
        android:id="@+id/btn_mostrar"
        android:layout_margin="@dimen/marginbutton"
        android:layout_width="@dimen/button"
        android:layout_marginBottom="50dp"


        android:layout_height="wrap_content"
        android:text="@string/mostrar" />


</LinearLayout>
